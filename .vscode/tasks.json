{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compilar/Buildar",
      "type": "shell",
      "command": "g++",
      "args": [
        // Flags de compilação
        "-Wall",
        "-Wextra",
        "-g3",

        // Versão do C++
        "-std=c++17",

        // Configuração de encoding
        "-fexec-charset=UTF-8",
        "-finput-charset=UTF-8",

        // Diretorio de inclusão
        "-Icabecalhos",

        // Arquivos fonte
        "main.cpp",
        "funcoes/entra_programa.cpp",
        "funcoes/gravar_jogo.cpp",
        "funcoes/excluir_jogo.cpp",
        "funcoes/buscar_jogo.cpp",
        "funcoes/id_manager.cpp",
        "funcoes/atualizar_jogo.cpp",
        "funcoes/FilaDeProcessamento.cpp",
        "funcoes/relatorio_jogo.cpp",
        "funcoes/buscas_variadas.cpp",
        
        // Arquivos de saida 
        "-o",
        "output/dotexe.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ],
      "detail": "Compilar/Buildar o programa utilizando do G++"
    }
  ]
}